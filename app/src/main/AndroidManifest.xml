<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.laudien.p1xelfehler.batterywarner">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.service.quicksettings.action.QS_TILE_PREFERENCES" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.laudien.p1xelfehler.batterywarner.Activities.IntroActivity" />
        <activity
            android:name="com.laudien.p1xelfehler.batterywarner.Activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.laudien.p1xelfehler.batterywarner.Activities.SettingsActivity"
            android:parentActivityName="com.laudien.p1xelfehler.batterywarner.Activities.MainActivity" />

        <receiver android:name=".BatteryAlarmManager"/>

        <receiver android:name="com.laudien.p1xelfehler.batterywarner.Receiver.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver android:name="com.laudien.p1xelfehler.batterywarner.Receiver.ChargingReceiver">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
            </intent-filter>
        </receiver>

        <receiver android:name="com.laudien.p1xelfehler.batterywarner.Receiver.DischargingReceiver">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
            </intent-filter>
        </receiver>

        <receiver android:name="com.laudien.p1xelfehler.batterywarner.Receiver.AppUpdateReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".Services.OnOffTileService"
            android:icon="@drawable/battery_status_full_white"
            android:label="@string/tile_title"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
    </application>

</manifest>