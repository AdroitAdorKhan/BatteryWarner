<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="@string/notification_sound">
        <RingtonePreference
            android:defaultValue="content://settings/system/notification_sound"
            android:key="@string/pref_sound_uri"
            android:ringtoneType="notification"
            android:showSilent="false"
            android:title="@string/btn_notification" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/low_battery_warning">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_warning_low_enabled"
            android:layout="@layout/preference_checkbox"
            android:title="@string/enabled" />
        <com.laudien.p1xelfehler.batterywarner.Activities.SettingsActivity.SeekBarPreference
            android:key="@string/pref_warning_low"
            app:default_progress="20"
            app:slider_max="40"
            app:slider_min="5"
            app:unit="%" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/high_battery_warning">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_warning_high_enabled"
            android:layout="@layout/preference_checkbox"
            android:title="@string/enabled" />
        <com.laudien.p1xelfehler.batterywarner.Activities.SettingsActivity.SeekBarPreference
            android:key="@string/pref_warning_high"
            app:default_progress="80"
            app:slider_min="60"
            app:unit="%" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/pref_stop_charging"
            android:title="Automatically stop charging" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_ac_enabled"
            android:title="@string/enable_on_ac" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_usb_enabled"
            android:title="@string/enable_on_usb" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_wireless_enabled"
            android:title="@string/enable_on_wireless" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="stats"
        android:title="@string/stats">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_graph_enabled"
            android:title="@string/enable_charging_curve" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/pref_graph_autosave"
            android:title="@string/autosave" />
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/timeFormats"
            android:entryValues="@array/timeFormats_values"
            android:key="@string/pref_time_format"
            android:summary="%s"
            android:title="@string/time_format_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/theming">
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/pref_dark_theme_enabled"
            android:title="@string/enable_dark_theme" />
    </PreferenceCategory>

</PreferenceScreen>