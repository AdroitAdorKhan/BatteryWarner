<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_technology"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Technologie: Li-Io"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temperatur: 25°C"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView_health"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gesundheit: OK"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView_batteryLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Akkustand: 30%"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView_voltage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spannung: 3,5V"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView_current"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stromstärke: 1500mAh"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>