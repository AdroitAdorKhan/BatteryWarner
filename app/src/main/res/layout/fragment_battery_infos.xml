<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_technology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_battery_info"
            tools:text="Technologie: Li-Io" />

        <TextView
            android:id="@+id/textView_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_battery_info"
            tools:text="Temperatur: 25°C" />

        <TextView
            android:id="@+id/textView_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_battery_info"
            tools:text="Gesundheit: OK" />

        <TextView
            android:id="@+id/textView_batteryLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_battery_info"
            tools:text="Akkustand: 30%" />

        <TextView
            android:id="@+id/textView_voltage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_battery_info"
            tools:text="Spannung: 3,5V" />

        <TextView
            android:id="@+id/textView_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_battery_info"
            tools:text="Stromstärke: 1500mAh" />

        <TextView
            android:id="@+id/textView_screenOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_battery_info"
            tools:text="Screen on: 33,33 %/h" />

        <TextView
            android:id="@+id/textView_screenOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_battery_info"
            tools:text="Screen off: 33,33 %/h" />
    </LinearLayout>
</ScrollView>