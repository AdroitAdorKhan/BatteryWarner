<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <com.laudien.p1xelfehler.batterywarner.views.BatteryView
        android:id="@+id/img_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:srcCompat="@drawable/ic_battery_status_full_white_128dp" />

    <fragment
        android:id="@+id/fragment_battery_info"
        android:name="com.laudien.p1xelfehler.batterywarner.fragments.BatteryInfoFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />
</LinearLayout>
