<resources>

    <!-- Default theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Dark Theme -->
    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar" />

    <!-- TabLayout Theme -->
    <style name="TabLayoutTheme" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabLayoutText</item>
        <item name="tabBackground">?attr/colorPrimary</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <!-- text style of TabLayout -->
    <style name="TabLayoutText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
