<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarStyle"
        android:layout_width="match_parent" />

    <fragment
        android:id="@+id/fragment_battery_info"
        android:name="com.laudien.p1xelfehler.batterywarner.fragments.MainPageFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <fragment
        android:id="@+id/fragment_graph"
        android:name="com.laudien.p1xelfehler.batterywarner.fragments.GraphFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>